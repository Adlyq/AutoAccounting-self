<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <activity
        tools:layout="@layout/activity_main"
        android:id="@+id/mainActivity"
        android:name="net.ankio.auto.ui.activity.HomeActivity"
        android:label="@string/title_home">


    </activity>
    <fragment
        android:id="@+id/homeFragment"
        android:name="net.ankio.auto.ui.fragment.plugin.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_plugin_home">


        <action
            android:id="@+id/action_homeFragment_to_logFragment"
            app:destination="@id/logFragment" />
    </fragment>

    <fragment
        android:id="@+id/dataFragment"
        android:name="net.ankio.auto.ui.fragment.plugin.DataFragment"
        android:label="@string/title_data"
        tools:layout="@layout/fragment_plugin_data">


    </fragment>

    <fragment
        android:id="@+id/ruleFragment"
        android:name="net.ankio.auto.ui.fragment.plugin.RuleDataFragment"
        android:label="@string/title_rule"
        tools:layout="@layout/fragment_plugin_rule_list">


    </fragment>


    <fragment
        android:id="@+id/logFragment"
        android:name="net.ankio.auto.ui.fragment.LogFragment"
        android:label="@string/title_log"
        tools:layout="@layout/fragment_log">

    </fragment>

    <fragment
        android:id="@+id/settingFragment"
        android:name="net.ankio.auto.ui.fragment.SettingFragment"
        android:label="@string/title_setting"
        tools:layout="@layout/fragment_setting">

    </fragment>

    <fragment
        android:id="@+id/appearanceFragment"
        android:name="net.ankio.auto.ui.fragment.settings.AppearanceFragment"
        android:label="@string/setting_theme"
        tools:layout="@layout/fragment_setting_appearance">

    </fragment>


</navigation>