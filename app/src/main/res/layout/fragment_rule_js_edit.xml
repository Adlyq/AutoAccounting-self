<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.fragment.RuleEditJsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:tag="back_button"
            app:navigationIcon="@drawable/abc_ic_ab_back_material"
            app:menu="@menu/menu_rule_js_edit"
            app:title="@string/title_rule_edit" />


    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- 代码编辑器 -->
        <io.github.rosemoe.sora.widget.CodeEditor
            android:id="@+id/codeEditor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- 底部工具栏容器 - 固定在底部，不被软键盘遮挡 -->
        <LinearLayout
            android:id="@+id/main_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?attr/colorSurface"
            android:elevation="4dp">

            <!-- 快速填充工具栏 -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorSurfaceContainer"
                android:overScrollMode="never"
                android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/quickInsertChips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    app:singleLine="true"
                    app:chipSpacing="4dp">

                    <!-- 快速插入按钮将在代码中动态添加 -->

                </com.google.android.material.chip.ChipGroup>

            </HorizontalScrollView>

            <!-- 符号输入工具栏 -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorSurfaceVariant"
                android:overScrollMode="never"
                android:scrollbars="none">

                <io.github.rosemoe.sora.widget.SymbolInputView
                    android:id="@+id/symbol_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp" />

            </HorizontalScrollView>

            <!-- 位置显示 -->
            <TextView
                android:id="@+id/position_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="24dp"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:background="?attr/colorSurfaceVariant"
                android:paddingVertical="2dp" />

        </LinearLayout>
    </LinearLayout>

    <!-- 操作按钮已移至右上角菜单 -->

</androidx.coordinatorlayout.widget.CoordinatorLayout>


