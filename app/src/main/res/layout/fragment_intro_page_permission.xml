<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/patchOptionsRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:edgeToEdge="true"
    app:consumeSystemWindowsInsets="start|end"
    app:fitsSystemWindowsInsets="top|bottom"
    android:padding="24dp">

    <!-- 标题 -->
    <!-- 主标题 -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvAuthTitle"
        style="@style/TextAppearance.Material3.HeadlineSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/auth_title"
        android:textColor="?attr/colorOnBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 新增：主标题下的说明行 -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvAuthSubtitle"
        style="@style/TextAppearance.Material3.BodyMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/auth_subtitle"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvAuthTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 滚动区域：只包卡片组 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollPerms"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/tvAuthSubtitle"
        app:layout_constraintBottom_toTopOf="@id/btnNext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">


        <net.ankio.auto.ui.components.ExpandableCardGroup
            android:id="@+id/cardGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">
            <!-- 悬浮窗权限 -->
            <net.ankio.auto.ui.components.ExpandableCardView
                android:id="@+id/cardOverlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ecv_icon="@drawable/ic_overlay"
                app:ecv_titleText="@string/perm_overlay_title"
                app:ecv_descriptionText="@string/perm_overlay_desc"
                app:ecv_expanded="true" />

            <net.ankio.auto.ui.components.ExpandableCardView
                android:id="@+id/cardXposedModule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ecv_icon="@drawable/xposed_framework_icon"
                app:ecv_titleText="@string/perm_xposed_title"
                app:ecv_descriptionText="@string/perm_xposed_desc" />
            <!-- 通知读取授权 -->
            <net.ankio.auto.ui.components.ExpandableCardView
                android:id="@+id/cardNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ecv_icon="@drawable/ic_notifications"
                app:ecv_titleText="@string/perm_notification_title"
                app:ecv_descriptionText="@string/perm_notification_desc" />

            <!-- 短信读取授权 -->
            <net.ankio.auto.ui.components.ExpandableCardView
                android:id="@+id/cardSms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ecv_icon="@drawable/ic_sms"
                app:ecv_titleText="@string/perm_sms_title"
                app:ecv_descriptionText="@string/perm_sms_desc" />

            <!-- 网络访问授权 -->
            <net.ankio.auto.ui.components.ExpandableCardView
                android:id="@+id/cardNetwork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ecv_icon="@drawable/ic_network"
                app:ecv_titleText="@string/perm_network_title"
                app:ecv_descriptionText="@string/perm_network_desc" />
            <!-- 如有更多，继续加 -->
        </net.ankio.auto.ui.components.ExpandableCardGroup>
    </androidx.core.widget.NestedScrollView>

    <!-- 下一步 按钮，始终贴底可点击 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        style="@style/Widget.Material3.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/action_next"
        android:paddingVertical="12dp"
        app:icon="@drawable/ic_arrow_forward_24"
        app:iconGravity="textEnd"
        app:iconPadding="8dp"
        app:iconTint="?attr/colorOnPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/action_next" />
</androidx.constraintlayout.widget.ConstraintLayout>
