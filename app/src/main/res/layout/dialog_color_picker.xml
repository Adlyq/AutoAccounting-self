<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/one_padding"
        android:gravity="center"
        android:text="@string/select_color"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall" />

    <!-- 当前颜色预览 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/one_padding"
            android:text="@string/current_color"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

        <View
            android:id="@+id/current_color_preview"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="@dimen/one_padding"
            android:background="@drawable/shape_circle"
            android:backgroundTint="#2196F3" />

        <TextView
            android:id="@+id/current_color_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="#2196F3"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textIsSelectable="true" />

    </LinearLayout>

    <!-- 预设颜色网格 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/one_padding"
        android:text="@string/preset_colors"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/color_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding"
        android:nestedScrollingEnabled="false" />

    <!-- 自定义颜色输入 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/one_padding"
        android:text="@string/custom_color"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding"
        android:hint="@string/color_hex_hint"
        app:endIconMode="clear_text"
        app:helperText="@string/color_hex_helper"
        app:startIconDrawable="@drawable/ic_palette">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/custom_color_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="7"
            android:text="#2196F3" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- 按钮组 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_button"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/one_padding"
            android:text="@string/cancel" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm" />

    </LinearLayout>

</LinearLayout>
