<!-- 周期选择对话框布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 标题 -->
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/period_selector_title"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        android:textColor="?attr/colorOnSurface"
        android:gravity="center" />

    <!-- 周期选项列表 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 最近一周 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLastWeek"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/period_last_week"
            android:gravity="start|center_vertical"
            app:icon="@drawable/ic_calendar_week"
            app:iconGravity="start" />

        <!-- 最近30天 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLast30Days"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/period_last_30_days"
            android:gravity="start|center_vertical"
            app:icon="@drawable/ic_calendar_month"
            app:iconGravity="start" />

        <!-- 这个月 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnThisMonth"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/period_this_month"
            android:gravity="start|center_vertical"
            app:icon="@drawable/ic_calendar_month2"
            app:iconGravity="start" />

        <!-- 最近一年 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLastYear"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/period_last_year"
            android:gravity="start|center_vertical"
            app:icon="@drawable/ic_date_range"
            app:iconGravity="start" />

        <!-- 今年 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnThisYear"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/period_this_year"
            android:gravity="start|center_vertical"
            app:icon="@drawable/ic_calendar_view_year"
            app:iconGravity="start" />

    </LinearLayout>

</LinearLayout>
