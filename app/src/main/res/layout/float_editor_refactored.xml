<!-- 重构后的账单编辑器布局 - Linus式简洁设计 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 账簿头部组件 -->
    <include
        android:id="@+id/book_header"
        layout="@layout/component_book_header"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentTop="true" />

    <!-- 滚动容器 -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding">

            <!-- 金额显示组件 -->
            <include
                android:id="@+id/amount_display"
                layout="@layout/component_amount_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- 规则信息组件 -->
            <include
                android:id="@+id/rule_info"
                layout="@layout/component_rule_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- 交易类型选择器组件 -->
            <include
                android:id="@+id/transaction_type_selector"
                layout="@layout/component_transaction_type_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- 支付信息组件 -->
            <include
                android:id="@+id/payment_info"
                layout="@layout/component_payment_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- 基础信息组件 -->
            <include
                android:id="@+id/basic_info"
                layout="@layout/component_basic_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- 操作按钮组件 -->
            <include
                android:id="@+id/action_buttons"
                layout="@layout/component_action_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
